@{
}
<form method="post" asp-action="MovieNight">
    Movie Title #1: <input type="text" name="title1" />
    Movie Title #2: <input type="text" name="title2" />
    Movie Title #3: <input type="text" name="title3" />

    <input type="submit" />
</form>

@if (Model != null)
{
    @foreach (MovieModel M in Model)
    {
        <div>
            <h1>@M.Title</h1>
            <h2>@M.Director</h2>
            <h2>@M.Genre</h2>
        </div>
        <img src="@M.Poster" height="240" width="180" />
    }
}